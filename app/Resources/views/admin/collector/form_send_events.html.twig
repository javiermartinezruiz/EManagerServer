<div class="table-responsive">
    <table class="table table-striped table-hover table-condensed">
        <thead>
        <tr>
            <th width="90%">Hora</th>
            <th width="10%" class="col-md-1">Acci&oacute;n</th>
        </tr>
        </thead>
        <tbody>
        {% if records is defined %}
            {% for item in records %}
                <tr>
                    <td>{{ item.processDate | date("H:i") }}</td>
                    <td>
                        <a data-toggle="modal" data-location-id="{{ item.id }}"
                           data-target="#confirmDeleteSendingEventsSchedule"
                           type="button btn-sm" class="btn btn-warning">
                            <span data-toggle="tooltip" data-placement="top" title="Borrar" class="glyphicon glyphicon-trash"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        {% endif %}
        </tbody>
    </table>
</div>

{% if max is defined and max > 0 %}
    <ul class="pagination">
        {% for i in 1..max %}

            {% if loop.first %}
                <li class="prev {% if current_page == 1 %} disabled {% endif %}">
                    {% if current_page != 1 %}
                        <a href="#" onclick="loadSendingEventsSchedule({{ current_page-1 }})">&laquo;</a>
                    {% else %}
                        <a>&laquo;</a>
                    {% endif %}
                </li>
            {% endif %}

            <li {% if current_page == loop.index %} class="active" {% endif %}>
                {% if current_page != loop.index %}
                    <a href="#" onclick="loadSendingEventsSchedule({{ loop.index }})">{{ loop.index }}</a>
                {% else %}
                    <a>{{ loop.index }}</a>
                {% endif %}
            </li>

            {% if loop.last %}
                <li class="next {% if current_page == max %} disabled {% endif %}">
                    {% if current_page != max %}
                        <a href="#" onclick="loadSendingEventsSchedule({{ current_page+1 }})">&raquo;</a>
                    {% else %}
                        <a>&raquo;</a>
                    {% endif %}
                </li>
            {% endif %}

        {% endfor %}
    </ul>
{% endif %}
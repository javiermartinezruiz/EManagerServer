<div class="panel-body">
    <div class="col-md-12">
        {{ form_start(form, {'attr':{'class':'form-inline', 'role':'form'}}) }}

        <div class="form-group has-feedback">

            <div class="col-md-12">
                {{
                    form_widget(form.collectionTime, {
                        'required':true,
                        'id':'collectionTimeBox',
                    })
                }}

                {% if form.collectionTime.vars.errors | length > 0 %}
                    <br/>
                    <div class="alert alert-danger">
                        {{ form_errors(form.collectionTime) }}
                    </div>
                {% endif %}

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                {{
                form_widget(form.save, {
                    'attr':{
                        'class':'btn btn-primary',
                    },
                    'id':'save',
                    'required':false,
                    'label':'Guardar'
                })
                }}
            </div>
        </div>

        {{ form_end(form) }}
    </div>
</div>
